<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="experiment.stratosphere" class="eu.stratosphere.fab.core.beans.experiment.Experiment" abstract="true">
        <constructor-arg name="runs" value="6"/>
        <constructor-arg name="runner" ref="stratosphere.hdfs"/>
    </bean>
    <bean id="experiment.stratosphere.wc" parent="experiment.stratosphere" abstract="true">
        <constructor-arg name="command">
            <value>${system.hadoop.paths.home}/examples/stratosphere-java-examples-0.5.1-WordCount.jar ${system.hadoop.paths.input}/tmp/input.txt ${system.hadoop.paths.output}/tmp/output.txt</value>
        </constructor-arg>
    </bean>

    <bean id="experiments" class="eu.stratosphere.fab.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <list>
                <bean parent="experiment.stratosphere.wc">
                    <constructor-arg name="config">
                        <value>
                            experiment.name.base = wc.dop02
                        </value>
                    </constructor-arg>
                </bean>
                <bean parent="experiment.stratosphere.wc">
                    <constructor-arg name="config">
                        <value>
                            experiment.name.base = wc.dop04
                            system.default.config.slaves = [ "cloud-7", "cloud-8" ]
                        </value>
                    </constructor-arg>
                </bean>
                <bean parent="experiment.stratosphere.wc">
                    <constructor-arg name="config">
                        <value>
                            experiment.name.base = wc.dop04
                            system.default.config.slaves = [ "cloud-7", "cloud-8", "cloud-9" ]
                        </value>
                    </constructor-arg>
                </bean>
                <bean parent="experiment.stratosphere.wc">
                    <constructor-arg name="config">
                        <value>
                            experiment.name.base = wc.dop08
                            system.default.config.slaves = [ "cloud-7", "cloud-8", "cloud-9", "cloud-10" ]
                        </value>
                    </constructor-arg>
                </bean>
            </list>
        </constructor-arg>
    </bean>

</beans>