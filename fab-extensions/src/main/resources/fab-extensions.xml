<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Hadoop File System -->
    <bean id="hdfs" class="eu.stratosphere.fab.extensions.beans.system.hadoop.HDFS" parent="system">
        <constructor-arg name="lifespan" value="SUITE"/>
        <constructor-arg name="dependencies">
            <set value-type="eu.stratosphere.fab.core.beans.system.System.System">
            </set>
        </constructor-arg>
    </bean>

    <!-- Hadoop MapReduce -->
    <bean id="mapreduce" class="eu.stratosphere.fab.extensions.beans.system.hadoop.MapReduce" parent="system">
        <constructor-arg name="lifespan" value="SUITE"/>
        <constructor-arg name="dependencies">
            <set value-type="eu.stratosphere.fab.core.beans.system.System.System">
                <ref bean="hdfs"/>
            </set>
        </constructor-arg>
    </bean>

    <!-- Stratosphere -->
    <bean id="stratosphere" class="eu.stratosphere.fab.extensions.beans.system.stratosphere.Stratosphere" parent="system">
        <constructor-arg name="lifespan" value="SUITE"/>
        <constructor-arg name="dependencies">
            <set value-type="eu.stratosphere.fab.core.beans.system.System.System"/>
        </constructor-arg>
    </bean>
    <bean id="stratosphere.hdfs" parent="stratosphere">
        <constructor-arg name="dependencies">
            <set value-type="eu.stratosphere.fab.core.beans.system.System.System">
                <ref bean="hdfs"/>
            </set>
        </constructor-arg>
    </bean>

</beans>